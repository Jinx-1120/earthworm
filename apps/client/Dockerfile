# 构建阶段
FROM node:20.12.2-alpine AS builder

WORKDIR /app

COPY . .

RUN npm i -g pnpm --registry=https://registry.npmmirror.com
# 安装所有依赖（包括工作区依赖）

RUN pnpm i --registry=https://registry.npmmirror.com

# 添加构建参数
ARG NUXT_API_BASE
ARG NUXT_LOGTO_APP_ID
ARG NUXT_LOGTO_ENDPOINT
ARG NUXT_BACKEND_ENDPOINT
ARG NUXT_LOGTO_SIGN_IN_REDIRECT_URI
ARG NUXT_LOGTO_SIGN_OUT_REDIRECT_URI
ARG NUXT_HELP_DOCS_URL

# 构建时设置环境变量
ENV NUXT_API_BASE=$NUXT_API_BASE
ENV NUXT_LOGTO_APP_ID=$NUXT_LOGTO_APP_ID
ENV NUXT_LOGTO_ENDPOINT=$NUXT_LOGTO_ENDPOINT
ENV NUXT_BACKEND_ENDPOINT=$NUXT_BACKEND_ENDPOINT
ENV NUXT_LOGTO_SIGN_IN_REDIRECT_URI=$NUXT_LOGTO_SIGN_IN_REDIRECT_URI
ENV NUXT_LOGTO_SIGN_OUT_REDIRECT_URI=$NUXT_LOGTO_SIGN_OUT_REDIRECT_URI
ENV NUXT_HELP_DOCS_URL=$NUXT_HELP_DOCS_URL

# 构建 API 应用
RUN pnpm build

# 暴露端口
EXPOSE 3000

# 启动命令
CMD ["pnpm", "start"]